# =============================================================================
# VA Signals v2 â€” Environment Variables
# =============================================================================
# Copy to .env and fill in values for your environment.
# Variables marked [REQUIRED] must be set for that context.
# Variables marked [OPTIONAL] have sensible defaults.

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Deployment environment: "development" or "production"
# [OPTIONAL] Defaults to "development"
ENV=development

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string for production (Cloud SQL).
# [OPTIONAL] If unset, falls back to local SQLite at data/signals.db.
# DATABASE_URL=postgresql://user:password@host:5432/va_signals

# =============================================================================
# FIREBASE AUTHENTICATION
# =============================================================================

# Firebase project ID
# [REQUIRED for auth]
FIREBASE_PROJECT_ID=vetclaims-ai

# Firebase Web API key (for client-side config endpoint)
# [REQUIRED for auth]
# FIREBASE_API_KEY=

# Google OAuth client ID (for Google Sign-In)
# [REQUIRED for Google login]
# GOOGLE_CLIENT_ID=

# Google OAuth client secret
# [REQUIRED for Google login server-side flow]
# GOOGLE_CLIENT_SECRET=

# Firebase service account credentials (JSON string).
# Alternative to GOOGLE_APPLICATION_CREDENTIALS file path.
# [OPTIONAL] Cloud Run uses Application Default Credentials instead.
# FIREBASE_SERVICE_ACCOUNT_JSON=

# Path to Firebase service account JSON file.
# [OPTIONAL] Alternative to FIREBASE_SERVICE_ACCOUNT_JSON.
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Firebase optional config (for client-side config endpoint)
# FIREBASE_STORAGE_BUCKET=
# FIREBASE_MESSAGING_SENDER_ID=
# FIREBASE_APP_ID=

# =============================================================================
# SESSION & SECURITY
# =============================================================================

# HMAC secret for signing session cookies.
# [REQUIRED in production] Must be a strong random string (32+ chars).
# In development, falls back to a hardcoded dev secret.
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(48))"
# SESSION_SECRET=

# Google Identity-Aware Proxy expected audience.
# [OPTIONAL] Only needed if running behind Cloud IAP.
# IAP_EXPECTED_AUDIENCE=

# =============================================================================
# CORS
# =============================================================================

# Comma-separated list of allowed origins.
# [OPTIONAL] Defaults to "http://localhost:8000,http://localhost:8080"
# ALLOWED_ORIGINS=http://localhost:8000,http://localhost:8080

# =============================================================================
# API KEYS (env var or macOS Keychain fallback)
# =============================================================================

# Anthropic API key for LLM summarization and classification.
# Keychain fallback: "claude-api"
# [REQUIRED for summarization, agenda drift, oversight deviation, state classification]
# ANTHROPIC_API_KEY=

# Congress.gov API key for bills, hearings, transcripts, Congressional Record.
# Keychain fallback: "congress-api"
# [REQUIRED for bills, hearings, transcripts pipelines]
# CONGRESS_API_KEY=

# NewsAPI key for state intelligence and news wire monitoring.
# Keychain fallback: "newsapi-key"
# [REQUIRED for state monitoring and news wire agent]
# NEWSAPI_KEY=

# =============================================================================
# EMAIL / SMTP
# =============================================================================

# SMTP configuration for email alerts.
# [REQUIRED for email alerting]
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# EMAIL_FROM=
# EMAIL_TO=

# =============================================================================
# RATE LIMITING
# =============================================================================

# Auth endpoint rate limiting (per-IP token bucket).
# [OPTIONAL] Defaults: 5 burst, 0.2 tokens/sec (1 token per 5 seconds refill).
# AUTH_RATE_LIMIT_BURST=5
# AUTH_RATE_LIMIT_RATE=0.2

# =============================================================================
# OUTPUT DIRECTORIES
# =============================================================================

# CEO brief output directory
# [OPTIONAL] Defaults to "outputs/ceo_briefs"
# CEO_BRIEF_OUTPUT_DIR=outputs/ceo_briefs

# Evidence pack output directory
# [OPTIONAL] Defaults to "outputs/evidence_packs"
# EVIDENCE_PACK_OUTPUT_DIR=outputs/evidence_packs

# =============================================================================
# AUDIT & LOGGING
# =============================================================================

# Audit log retention in days.
# [OPTIONAL] Defaults to module constant.
# LOG_RETENTION_DAYS=90
